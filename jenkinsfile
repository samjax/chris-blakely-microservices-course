pipeline{
    agent {
        docker{
            image 'maven:3.8.6-openjdk-17'
        }
    }
    stages{
        stage("Clean the project"){
            steps{
                sh '''
                echo "Clean project"
                cd patient-service
                mvn clean
                '''
            }
        }
        stage("Build the project"){
            steps{
                sh '''
                echo "Compile the project"
                cd patient-service
                mvn compile
                '''
            }
        }
    }
}
